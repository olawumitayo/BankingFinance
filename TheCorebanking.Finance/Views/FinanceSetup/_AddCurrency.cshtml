                <input type="file" class="file btn btn-danger" id="btnUploadCurrency" />
                <i class="now-ui-icons ui-1_lock-circle-open"></i>
                Upload Currency
            </div>
        </div>
        <table id="currencyTable" data-toggle="table" class="data-table"
               data-url="@Url.Action("listcurrency", "financesetup")"
               data-search="true"
               data-search-align="right"
               data-toolbar="#currency-toolbar"
               data-pagination="true"
               data-mobile-responsive="true"
               data-show-refresh="true"
               data-show-toggle="true"
               data-show-export="true"
               data-detail-formatter="detailFormatter"
              
               data-show-columns="true"
               data-page-list="[5,10,25,50,100,150,200,250,300]"
               data-page-size="25"            
               data-check-on-init="true"               
               data-buttons-class="danger">
            <thead>
                <tr>
                    <th data-field="id" data-visible="false"></th>
                    <th data-field="currCode" data-sortable="true"><b>Code</b></th>
                    <th data-field="currName"><b>Name</b></th>
                    <th data-field="currSymbol"><b>Symbol</b></th>
                    <th data-field="exchangeRate" data-align="right"><b>Rate</b></th>                 
                    <th data-field="" data-align="right" data-events="currencyEvents" data-formatter="currencyFormatter">  </th>
                </tr>
            </thead>
        </table>



    </div>

</div>
